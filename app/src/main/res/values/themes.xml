<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieCatalog" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="font">@font/space_mono_regular</item>
        <item name="fontFamily">@font/space_mono_regular</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/dark_blue_700</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.MovieCatalog.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/baseline_movie_filter_60</item>
        <item name="windowSplashScreenBackground">@color/dark_blue_700</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MovieCatalog</item>
    </style>
    " parent="Base.Theme.MovieCatalog" />

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:fontFamily">@font/space_mono_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text">
        <item name="color">@color/white</item>
    </style>

    <style name="Text.Header">
        <item name="fontFamily">@font/space_mono_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Title">
        <item name="fontFamily">@font/space_mono_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Regular">
        <item name="android:textSize">14sp</item>
    </style>
</resources>